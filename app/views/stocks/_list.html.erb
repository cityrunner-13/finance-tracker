<table class="table table-responsive table-striped".
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
        <th>Action</th>
      <% end %>
    </tr>
  </thead>
  <body>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td>$<%= number_with_precision(user_stock.last_price, :precision => 2, :delimiter => ',')%></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Unfollow", user_stock_path(user_stock), method: :delete,
                          data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </body>
</table>
