<div class="card">
  <table class="table table-responsive table-hover">
    <body>
      <% @user_stocks.each do |user_stock| %>
        <tr>
          <td><%= user_stock.name %><br><%= user_stock.ticker %></td>
          <td>$<%= number_with_precision(user_stock.last_price, :precision => 2, :delimiter => ',')%></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Remove", user_stock_path(user_stock), method: :delete,
                            data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </body>
  </table>
</div>
