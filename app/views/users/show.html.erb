<h1><%= @user.full_name %>'s Portfolio</h1>
<h4 class='light-text'><%= @user.email %></h4>
<br>

<% if @user.stocks.size > 0 %>
  <div>
    <%= render 'stocks/list' %>
  </div>
<% else %>
  <p class="lead"><%= @user.first_name %> is not following any stocks.</p>
<% end %>

<%= link_to "Back", my_friends_path, class: "btn btn-primary" %>
